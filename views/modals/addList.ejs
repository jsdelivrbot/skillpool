<div class="container" id="addListModal" style = "padding-left: 20px; padding-right: 20px;"> 


        <h6>Add New List</h6>

        <form class="form-horizontal" id = "adding_new_list_form" action="/api/list/add" method = "post"> 

                <div class = "form-group">
                    <label for="list_name" class = "col-sm-2 control-label">List Name</label>
                    <div class="col-sm-10">
                    <input type = "text" id = "list_name" name = "listName" class = "form-control"/>
                    </div>
                </div>  


                <div class = "form-group">
                    <label for="list_description" class = "col-sm-2 control-label">Description</label>
                    <div class="col-sm-10">
                    <input type = "text" id = "list_description" name = "listDescription" class = "form-control"/>
                    </div>
                </div> 

                <div class = "form-group">
                    <label for="list_name" class = "col-sm-2 control-label">Tags</label>
                    <div class="col-sm-10">
                    <input type = "text" id = "list_tags" name = "listTags" class = "form-control list-tags"/>
                    </div>
                </div>  

                <input type="hidden" class="media-id-for-add-customlist" name="mediaId" value="<%=media.id%>"> 

                <button class="btn btn-primary" type-"submit">Add</button>

        </form>


</div>